<h1>Deals</h1>

<ol>
	
<% @deals["deals"].each	do |deal| %>

	
	<% if deal["dealTypes"].blank? %>
	
	<% elsif @type.index(deal["dealTypes"][0]["name"]) %>
	
	<% @d = Choice.new( name: deal["merchant"]["name"], category: deal["dealTypes"][0]["name"], 
					highlight: deal["highlightsHtml"], title: deal["title"],
					 image: deal["mediumImageUrl"] )%>
	<% @d.save%>
					
	<li><p><strong><%=link_to deal["title"], "/choices/#{@d.id}" %></strong></p></li>
	<p>Name: <%= deal["merchant"]["name"] %> </p>
	<p>Type: <%= deal["dealTypes"][0]["name"] %></p>
	<p>More: <%= deal["highlightsHtml"]%></p>
	<%= image_tag deal["mediumImageUrl"]%>
	<br><br>
	<%end%>
	
<%end%>
</ol>


